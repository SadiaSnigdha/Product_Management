<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="900.0" prefWidth="1400.0" style="-fx-background-color: linear-gradient(to bottom right, #c0d4e0, #a6c1de);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.product_management.controller.CreateSalesController">

    <children>
        <VBox layoutX="100" layoutY="30" prefWidth="1200" spacing="20" style="-fx-background-color: white; -fx-background-radius: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 4);">

            <padding>
                <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
            </padding>

            <children>

                <Label alignment="CENTER" text="🛒 Create Sale">
                    <font>
                        <Font name="Arial Black" size="32.0" />
                    </font>
                </Label>

                <HBox prefWidth="699.0" spacing="20">
                    <children>
                        <VBox spacing="10" prefWidth="280">
                            <Label text="Select Product:" />
                            <ComboBox fx:id="productComboBox" prefWidth="250" promptText="Search Product..." />
                            <Label text="Date (d-m-y):" />
                            <TextField fx:id="date" prefWidth="250" promptText="d-m-y" />
                        </VBox>

                        <VBox spacing="10" prefWidth="170">
                            <Label text="Quantity:" />
                            <TextField fx:id="quantityField" prefWidth="150" promptText="Enter Quantity" />
                        </VBox>

                        <VBox alignment="BOTTOM_CENTER" prefWidth="160">
                            <Button fx:id="addToCartButton" onAction="#onAddToCart" prefHeight="40" prefWidth="150" style="-fx-background-color: #1cc88a; -fx-text-fill: white; -fx-font-weight: bold;" text="➕ Add to Cart" />
                        </VBox>
                    </children>
                </HBox>

                <TableView fx:id="cartTable" prefHeight="300">
                    <columns>
                        <TableColumn fx:id="productNameCol" prefWidth="411.0" text="Product" />
                        <TableColumn fx:id="quantityCol" prefWidth="259.0" text="Quantity" />
                        <TableColumn fx:id="priceCol" prefWidth="257.0" text="Price" />
                        <TableColumn fx:id="subtotalCol" prefWidth="212.0" text="Subtotal" />
                    </columns>
                </TableView>

                <HBox alignment="CENTER_LEFT" spacing="15">
                    <children>
                        <VBox spacing="10">
                            <Label text="Customer Phone:" />
                            <TextField fx:id="phoneField" prefWidth="250" promptText="Enter Phone Number" />
                        </VBox>
                        <Button fx:id="searchButton" onAction="#onSearchCustomer" style="-fx-background-color: #4e73df; -fx-text-fill: white;" text="🔍 Search" />
                        <Button fx:id="addCustomerButton" onAction="#onAddCustomer" style="-fx-background-color: #1cc88a; -fx-text-fill: white;" text="➕ Add Customer" visible="false" />
                    </children>
                </HBox>

                <VBox spacing="10">
                    <Label style="-fx-font-size: 16; -fx-font-weight: bold;" text="Customer Details" />
                    <HBox spacing="40">
                        <VBox spacing="5">
                            <Label text="Name:" />
                            <Label fx:id="customerName" style="-fx-font-size: 14;" text="-" />
                        </VBox>
                        <VBox spacing="5">
                            <Label text="Email:" />
                            <Label fx:id="customerEmail" style="-fx-font-size: 14;" text="-" />
                        </VBox>
                    </HBox>
                </VBox>

                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label style="-fx-font-size: 16;" text="💰 Total Bill:" />
                    <Label fx:id="totalLabel" style="-fx-font-weight: bold; -fx-font-size: 16;" text="0.0" />
                </HBox>

                <Button fx:id="sellButton" onAction="#onConfirmSale" prefHeight="40" prefWidth="200" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold;" text="✅ Confirm Sale" />

            </children>
        </VBox>

        <Button fx:id="back" layoutX="1211.0" layoutY="846.0" mnemonicParsing="false" onAction="#onClickBack" style="-fx-background-color: gray; -fx-text-fill: white; -fx-font-weight: bold;" text="Back" />

    </children>
</AnchorPane>
