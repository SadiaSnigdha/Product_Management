<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.product_management.controller.EntryController"
            prefWidth="900" prefHeight="600"
            style="-fx-background-color: linear-gradient(to right, #667eea, #764ba2);">

    <!-- Left Side Panel -->
    <left>
        <AnchorPane prefWidth="400" style="-fx-background-color: #5a3f91;">
            <children>
                <Text layoutX="50" layoutY="220" strokeType="OUTSIDE" strokeWidth="0" fill="white" text="PRODUCT">
                    <font>
                        <Font name="Arial Black" size="50"/>
                    </font>
                </Text>
                <Text layoutX="50" layoutY="290" strokeType="OUTSIDE" strokeWidth="0" fill="white" text="MANAGEMENT">
                    <font>
                        <Font name="Arial Black" size="50"/>
                    </font>
                </Text>
                <Text layoutX="50" layoutY="370" strokeType="OUTSIDE" strokeWidth="0" fill="#d1c4e9" wrappingWidth="300"
                      text="Manage your products, customers, and sales with ease and style. Welcome to our app!">
                    <font>
                        <Font name="Arial" size="16"/>
                    </font>
                </Text>
            </children>
        </AnchorPane>
    </left>

    <!-- Center Content -->
    <center>
        <AnchorPane prefWidth="500">
            <children>
                <VBox alignment="CENTER" spacing="40" layoutX="75" layoutY="150" prefWidth="350">
                    <children>
                        <Text text="Welcome Back!" fill="white">
                            <font>
                                <Font name="Arial Black" size="36"/>
                            </font>
                        </Text>

                        <HBox spacing="30" alignment="CENTER">
                            <children>
                                <Button fx:id="loginButton" text="Login" prefWidth="140" prefHeight="60"
                                        style="-fx-background-color: #8e44ad; -fx-text-fill: white; -fx-font-size: 18; -fx-background-radius: 30;"
                                        onAction="#onLoginClick"
                                        onMouseEntered="#onHover"
                                        onMouseExited="#onExit"/>
                                <Button fx:id="signUpButton" text="Sign Up" prefWidth="140" prefHeight="60"
                                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 18; -fx-background-radius: 30;"
                                        onAction="#onSignUpClick"
                                        onMouseEntered="#onHover"
                                        onMouseExited="#onExit"/>
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </AnchorPane>
    </center>

</BorderPane>
