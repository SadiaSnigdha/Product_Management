<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.product_management.controller.HomeController"
            prefHeight="600.0" prefWidth="900.0"
            style="-fx-background-color: linear-gradient(to right, #e0eafc, #cfdef3);">

    <!-- Top Bar -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: #6a11cb; -fx-background-radius: 0 0 20 20;">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <children>
                <Label text="🏠 Product Management Home" style="-fx-text-fill: white; -fx-font-size: 26px; -fx-font-weight: bold;"/>
            </children>
        </HBox>
    </top>

    <!-- Center Grid Button Layout -->
    <center>
        <GridPane hgap="30" vgap="30" alignment="CENTER">
            <padding>
                <Insets top="50" bottom="50" left="50" right="50"/>
            </padding>

            <!-- Add Product -->
            <Button text="➕ Add Product" prefWidth="220" prefHeight="80"
                    onAction="#onAddProductClick"
                    style="-fx-font-size: 18px; -fx-background-color: #ff6f91; -fx-text-fill: white; -fx-background-radius: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, 0, 4);"/>

            <!-- Product List -->
            <Button text="📦 Product List" prefWidth="220" prefHeight="80"
                    GridPane.columnIndex="1" onAction="#onProductListClick"
                    style="-fx-font-size: 18px; -fx-background-color: #6a11cb; -fx-text-fill: white; -fx-background-radius: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, 0, 4);"/>

            <!-- Customer List -->
            <Button text="👥 Customer List" prefWidth="220" prefHeight="80"
                    GridPane.rowIndex="1" onAction="#onCustomerListClick"
                    style="-fx-font-size: 18px; -fx-background-color: #00c9a7; -fx-text-fill: white; -fx-background-radius: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, 0, 4);"/>

            <!-- Order History -->
            <Button text="📜 Order History" prefWidth="220" prefHeight="80"
                    GridPane.columnIndex="1" GridPane.rowIndex="1" onAction="#onOrderHistoryClick"
                    style="-fx-font-size: 18px; -fx-background-color: #ffb84d; -fx-text-fill: white; -fx-background-radius: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, 0, 4);"/>

            <!-- Create Sales -->
            <Button text="💰 Create Sales" prefWidth="470" prefHeight="80"
                    GridPane.rowIndex="2" GridPane.columnSpan="2" onAction="#onCreateSalesClick"
                    style="-fx-font-size: 18px; -fx-background-color: #3cba92; -fx-text-fill: white; -fx-background-radius: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, 0, 4);"/>
        </GridPane>
    </center>

    <!-- Bottom Back Button -->
    <bottom>
        <HBox alignment="CENTER">
            <padding>
                <Insets top="10" bottom="20" />
            </padding>
            <Button fx:id="backButton" onAction="#onBack" text="⬅ Back"
                    prefWidth="120" prefHeight="40"
                    style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-background-radius: 10;" />
        </HBox>
    </bottom>

</BorderPane>
