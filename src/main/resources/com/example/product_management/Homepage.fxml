<BorderPane prefHeight="600.0" prefWidth="900.0" style="-fx-background-color: linear-gradient(to right, #e0eafc, #cfdef3);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.product_management.controller.HomeController">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: #6a11cb; -fx-background-radius: 0 0 20 20;">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
            <children>
                <Label style="-fx-text-fill: white; -fx-font-size: 26px; -fx-font-weight: bold;" text="ðŸ  Product Management Home" />
            </children>
        </HBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="20">
            <padding>
                <Insets bottom="50" left="50" right="50" top="50" />
            </padding>

            <GridPane alignment="CENTER" hgap="30" vgap="30">
                <Button fx:id="addProductButton" onAction="#onAddProductClick" prefHeight="80" prefWidth="220" style="-fx-font-size: 18px; -fx-background-color: #ff6f91; -fx-text-fill: white; -fx-background-radius: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, 0, 4);" text="âž• Add Product" />

                <Button onAction="#onProductListClick" prefHeight="80" prefWidth="220" style="-fx-font-size: 18px; -fx-background-color: #6a11cb; -fx-text-fill: white; -fx-background-radius: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, 0, 4);" text="ðŸ“¦ Product List" GridPane.columnIndex="1" />

                <Button onAction="#onCustomerListClick" prefHeight="80" prefWidth="220" style="-fx-font-size: 18px; -fx-background-color: #00c9a7; -fx-text-fill: white; -fx-background-radius: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, 0, 4);" text="ðŸ‘¥ Customer List" GridPane.rowIndex="1" />

                <Button onAction="#onOrderHistoryClick" prefHeight="80" prefWidth="220" style="-fx-font-size: 18px; -fx-background-color: #ffb84d; -fx-text-fill: white; -fx-background-radius: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, 0, 4);" text="ðŸ“œ Order History" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Button onAction="#onCreateSalesClick" prefHeight="80" prefWidth="470" style="-fx-font-size: 18px; -fx-background-color: #3cba92; -fx-text-fill: white; -fx-background-radius: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, 0, 4);" text="ðŸ’° Create Sales" GridPane.columnSpan="2" GridPane.rowIndex="2" />
            <columnConstraints>
               <ColumnConstraints />
               <ColumnConstraints />
            </columnConstraints>
            <rowConstraints>
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
            </rowConstraints>
            </GridPane>

            <!-- Newly Added View Stock Button -->
            <Button onAction="#onViewStockClick" prefHeight="80" prefWidth="470" style="-fx-font-size: 18px; -fx-background-color: #4e54c8; -fx-text-fill: white; -fx-background-radius: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, 0, 4);" text="ðŸ“Š View Stock" />
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER">
            <padding>
                <Insets bottom="20" top="10" />
            </padding>
            <Button fx:id="backButton" onAction="#onBack" prefHeight="40" prefWidth="120" style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-background-radius: 10;" text="â¬… Back" />
        </HBox>
    </bottom>

</BorderPane>
