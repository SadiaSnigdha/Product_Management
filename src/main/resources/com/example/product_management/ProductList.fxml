                        <TableColumn fx:id="quantityColumn" prefWidth="162.0" text="Quantity" />
                  <TableColumn fx:id="date" prefWidth="156.0" text="Date" />
                    </columns>
                    <effect>
                        <DropShadow color="#aaaaaa" offsetY="5" radius="10" />
                    </effect>
                    <style>
                        -fx-background-radius: 10;
                        -fx-border-radius: 10;
                        -fx-border-color: #cccccc;
