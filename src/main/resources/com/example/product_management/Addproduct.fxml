<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="1000.0" prefWidth="1400.0" style="-fx-background-color: linear-gradient(to bottom right, #e0eafc, #cfdef3);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.product_management.controller.AddProductController">

    <children>
        <VBox layoutX="-6.0" layoutY="94.0" prefHeight="589.0" prefWidth="1410.0" spacing="10.0">
            <padding>
                <Insets bottom="15" left="15" right="15" top="15" />
            </padding>

            <children>
                <TableView fx:id="productTable" prefHeight="702.0" prefWidth="1380.0">
                    <columns>
                        <TableColumn fx:id="productIdColumn" prefWidth="218.0" text="Product ID" />
                        <TableColumn fx:id="productNameColumn" prefWidth="315.0" text="Product Name" />
                        <TableColumn fx:id="categoryColumn" prefWidth="260.0" text="category " />
                        <TableColumn fx:id="priceColumn" prefWidth="218.0" text="Price" />
                        <TableColumn fx:id="quantityColumn" prefWidth="182.0" text="quantity " />
                        <TableColumn fx:id="dateColumn" prefWidth="185.0" text="Date" />
                    </columns>
                    <effect>
                        <DropShadow color="#a6a6a6" offsetY="5.0" radius="10" />
                    </effect>
                    <style>
                        -fx-background-radius: 10;
                        -fx-border-radius: 10;
                        -fx-border-color: #cccccc;
                        -fx-table-header-border-color: #6a11cb;
                        -fx-font-size: 14px;
                    </style>
                </TableView>
            </children>
        </VBox>

        <Label layoutX="81.0" layoutY="711.0" text="Product ID:" />
        <TextField fx:id="productId" layoutX="180.0" layoutY="706.0" prefWidth="200.0" />

        <Label layoutX="56.0" layoutY="770.0" text="Product Name:" />
        <TextField fx:id="productName" layoutX="180.0" layoutY="765.0" prefWidth="200.0" />

        <Label layoutX="86.0" layoutY="823.0" text="Category:" />
        <TextField fx:id="category" layoutX="180.0" layoutY="818.0" prefWidth="200.0" />

        <Label layoutX="967.0" layoutY="711.0" text="Price ($):" />
        <TextField fx:id="price" layoutX="1040.0" layoutY="706.0" prefWidth="200.0" />

        <Label layoutX="965.0" layoutY="770.0" text="Quantity:" />
        <TextField fx:id="quantity" layoutX="1040.0" layoutY="765.0" prefWidth="200.0" />

        <Label layoutX="986.0" layoutY="823.0" text="Date:" />
        <TextField fx:id="date" layoutX="1040.0" layoutY="818.0" prefWidth="200.0" />

        <Button fx:id="add" layoutX="211.0" layoutY="900.0" onAction="#onClickAdd" prefHeight="50.0" prefWidth="111.0" style="-fx-background-color: #6a11cb; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20;" text="Add" />

        <Button fx:id="back" layoutX="1095.0" layoutY="900.0" onAction="#onClickBack" prefHeight="50.0" prefWidth="111.0" style="-fx-background-color: gray; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20;" text="Back" />
      <VBox layoutX="-5.0" layoutY="-18.0" prefHeight="97.0" prefWidth="1530.0" style="-fx-background-color: #6a11cb; -fx-background-radius: 25;">
         <children>
            <Label prefHeight="122.0" prefWidth="205.0" style="-fx-text-fill: white; -fx-font-size: 25; -fx-font-weight: bold;" text="   âž•Add Product" />
         </children>
      </VBox>
    </children>
</AnchorPane>
