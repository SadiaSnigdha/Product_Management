<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400" prefWidth="600"
            style="-fx-background-color: linear-gradient(to bottom right, #c0d4e0, #a6c1de);"
            xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/23.0.1"
            fx:controller="com.example.product_management.controller.ForgetPasswordController">

    <children>
        <VBox alignment="TOP_CENTER" layoutX="50.0" layoutY="27.0"
              prefHeight="323.0" prefWidth="500" spacing="20"
              style="-fx-background-color: white; -fx-background-radius: 15;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 4);">
            <padding>
                <Insets bottom="30" left="30" right="30" top="30" />
            </padding>

            <children>
                <Label text="ðŸ”‘ Reset Password">
                    <font>
                        <Font name="Arial Black" size="24" />
                    </font>
                </Label>

                <VBox spacing="15">
                    <HBox spacing="10">
                        <Label prefWidth="150" text="Email:" />
                        <TextField fx:id="emailField" prefWidth="300" promptText="Enter your registered email" />
                    </HBox>

                    <HBox spacing="10">
                        <Label prefWidth="150" text="New Password:" />
                        <PasswordField fx:id="newPasswordField" prefWidth="300" promptText="Enter new password" />
                    </HBox>

                    <HBox spacing="10">
                        <Label prefWidth="150" text="Confirm Password:" />
                        <PasswordField fx:id="confirmPasswordField" prefWidth="300" promptText="Confirm new password" />
                    </HBox>
                </VBox>

                <Button fx:id="resetButton" onAction="#onResetPassword"
                        prefHeight="40" prefWidth="200"
                        style="-fx-background-color: #6a11cb; -fx-text-fill: white; -fx-font-weight: bold;"
                        text="ðŸ”„ Reset Password" />

            </children>
        </VBox>
    </children>
</AnchorPane>
